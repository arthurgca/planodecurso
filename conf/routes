# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
# GET     /                           			controllers.Application.index()

GET     /planoInicial              				controllers.PlanoDeCursoApp.planoInicial()
POST    /alocarDisciplina/:semestre/:disciplina	controllers.PlanoDeCursoApp.alocarDisciplina(semestre: Integer, disciplina: Integer)
POST    /desalocarDisciplina/:disciplina		controllers.PlanoDeCursoApp.desalocarDisciplina(disciplina: Integer)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
