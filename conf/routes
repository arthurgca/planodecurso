# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                               controllers.PlanoDeCursoApp.index()
GET     /resetar                                        controllers.PlanoDeCursoApp.resetar()

# Disciplinas
GET     /disciplinas                                    controllers.DisciplinasCtrl.listar()

# Curso
GET     /curso                                          controllers.PlanoDeCursoCtrl.exibir()

# Alocacoes
POST    /curso/:periodo                                 controllers.AlocacoesCtrl.criar(periodo: Integer, disciplina: Integer)
PUT     /curso/:periodo/:disciplina                     controllers.AlocacoesCtrl.mover(periodo: Integer, disciplina: Integer, dePeriodo: Integer)
DELETE  /curso/:periodo/:disciplina                     controllers.AlocacoesCtrl.deletar(periodo: Integer, disciplina: Integer)

# Recursos est√°ticos
GET     /assets/*file                                   controllers.Assets.at(path="/public", file)