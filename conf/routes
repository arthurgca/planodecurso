# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                               controllers.PlanoDeCursoApp.index()
GET     /resetar                                        controllers.PlanoDeCursoApp.resetar()

# Disciplinas
GET     /disciplinas                                    controllers.DisciplinasCtrl.listar()
# Curso
GET     /curso                                          controllers.PlanoDeCursoCtrl.exibir()
POST    /curso/:semestre/:disciplina                    controllers.AlocacoesCtrl.criar(semestre: Integer, disciplina: Integer)
PUT     /curso/:semestre/:disciplina                    controllers.AlocacoesCtrl.mover(semestre: Integer, disciplina: Integer)
DELETE  /curso/:semestre/:disciplina                    controllers.AlocacoesCtrl.deletar(semestre: Integer, disciplina: Integer)

# Recursos est√°ticos
GET     /assets/*file                                   controllers.Assets.at(path="/public", file)